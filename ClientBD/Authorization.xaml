<Window x:Class="ClientBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientBD"
        mc:Ignorable="d"
        Title="Авторизация" Height="350" Width="525">
    <Grid>
        <StackPanel x:Name="sp_textboxes" HorizontalAlignment="Left" Height="107" Margin="342,28,0,0" VerticalAlignment="Top" Width="165">
            <Label x:Name="lbl_login" Content="Логин: "/>
            <TextBox x:Name="tb_login" TextWrapping="Wrap" MinWidth="120" MaxWidth="250" HorizontalAlignment="Left"
                     Margin="10, 5"/>
            <Label x:Name="lbl_pass" Content="Пароль: "/>
            <PasswordBox x:Name="pb_password" MinWidth="120" MaxWidth="250" HorizontalAlignment="Left" 
                         RenderTransformOrigin="0.49,0.5" Margin="10, 5"/>
        </StackPanel>
    </Grid>
</Window>
